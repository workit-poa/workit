{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@workit/common": [
        "libs/common/src/index.ts"
      ],
      "@workit/auth": [
        "libs/auth/src/index.ts"
      ],
      "@workit/wallet": [
        "libs/wallet/src/index.ts"
      ],
      "@workit/hedera": [
        "libs/hedera/src/index.ts"
      ]
    }
  }
}

